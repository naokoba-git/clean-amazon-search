  "brand_patterns": {
    "description": "怪しいブランド名を検出する正規表現パターン",
    "patterns": [
      {
        "id": "consonants_only",
        "pattern": "^[BCDFGHJKLMNPQRSTVWXYZbcdfghjklmnpqrstvwxyz]{4,}$",
        "description": "子音のみ4文字以上（例: BKPH, XRDT, GVNM）",
        "score": 30,
        "examples": ["BKPH", "XRDT", "GVNM", "LRTQ"]
      },
      {
        "id": "uppercase_long",
        "pattern": "^[A-Z]{6,}$",
        "description": "大文字のみ6文字以上（例: QWERTZ, ASDFGH）",
        "score": 25,
        "examples": ["QWERTZ", "ASDFGH", "ZXCVBN", "LKJHGF"]
      },
      {
        "id": "suffix_jp",
        "pattern": "^.+(?:JP|Jp|jp)$",
        "description": "末尾がJP（例: BrandJP, RandomJP）",
        "score": 15,
        "examples": ["HogeJP", "TechJP", "ShopJP"]
      },
      {
        "id": "suffix_japan",
        "pattern": "^.+(?:Japan|JAPAN|japan)$",
        "description": "末尾がJapan（例: NoNameJapan）",
        "score": 15,
        "examples": ["NoNameJapan", "TechJapan", "ShopJAPAN"]
      },
      {
        "id": "random_alphanumeric",
        "pattern": "^[A-Z]{2,4}[0-9]{2,4}[A-Z]{0,2}$",
        "description": "ランダムな英数字の組み合わせ（例: AB123, XY99Z）",
        "score": 35,
        "examples": ["AB123", "XY99", "QW12AB", "ZX999"]
      },
      {
        "id": "chinese_characters_brand",
        "pattern": "^[\\u4e00-\\u9fff]{2,}$",
        "description": "中国語のみのブランド名",
        "score": 20,
        "examples": ["深圳科技", "广州电子"]
      },
      {
        "id": "mixed_case_random",
        "pattern": "^(?:[A-Z][a-z]){3,}$",
        "description": "大文字小文字が交互（例: AbCdEf）",
        "score": 20,
        "examples": ["AbCdEf", "XyZaB"]
      },
      {
        "id": "double_letters",
        "pattern": "^[A-Za-z]*([A-Za-z])\\1{2,}[A-Za-z]*$",
        "description": "同じ文字が3回以上連続（例: BRRRAND）",
        "score": 15,
        "examples": ["BRRRAND", "Cooool", "Niiiice"]
      }
    ]
  },
